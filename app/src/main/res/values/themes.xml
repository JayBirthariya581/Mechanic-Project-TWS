<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/card_black</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorPrimaryVariant">#c69f26</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#fff</item>


        <!--<item name="android:statusBarColor">#00000000</item>-->
        <!-- Customize your theme here. -->
    </style>


    <style name="ProgressTheme" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/rotating_icon</item>
        <item name="android:animationResolution">33</item>
    </style>
</resources>